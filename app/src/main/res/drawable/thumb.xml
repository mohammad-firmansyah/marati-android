<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

            <corners
                android:radius="13dp"
                />

            <stroke
                android:width="3dp"
                android:color="#000"
                />
            <size
                android:width="41dp"
                android:height="26dp"
                />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners
                android:radius="13dp"
                />
            <stroke
                android:width="2dp"
                android:color="#5D49E2"
                />

            <size
                android:width="40dp"
                android:height="24dp"
                />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <shape android:shape="rectangle" >
            <solid android:color="#5D49E2"/>
            <corners
                android:radius="13dp"
                />
            <size
                android:width="80dp"
                android:height="30dp"
                />
        </shape>
    </item>

    <item android:state_checked="false" >

        <shape android:shape="rectangle">
            <solid android:color="#5D49E2"/>
            <corners
                android:radius="13dp"
                />
            <size
                android:width="80dp"
                android:height="30dp"
                />
        </shape>

    </item>



</selector>